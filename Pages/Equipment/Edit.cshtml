@page
@model GestionGym.Pages.Equipment.EditModel



@section Styles {

    <link href="~/lib/bootstrap/dist/css/bootstrap-pulse.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">



}


<div class="container mt-5">
    <h2>Modifier l'Équipement</h2>

    <form method="post">
        <input type="hidden" asp-for="EditEquipmentViewModel.Id" />

        <div class="form-group">
            <label asp-for="EditEquipmentViewModel.Name">Nom</label>
            <input asp-for="EditEquipmentViewModel.Name" class="form-control" />
            <span asp-validation-for="EditEquipmentViewModel.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EditEquipmentViewModel.Description">Description</label>
            <input asp-for="EditEquipmentViewModel.Description" class="form-control" />
            <span asp-validation-for="EditEquipmentViewModel.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EditEquipmentViewModel.Quantity">Quantité</label>
            <input asp-for="EditEquipmentViewModel.Quantity" class="form-control" />
            <span asp-validation-for="EditEquipmentViewModel.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EditEquipmentViewModel.MaintenanceDate">Date de Maintenance</label>
            <input asp-for="EditEquipmentViewModel.MaintenanceDate" class="form-control" />
            <span asp-validation-for="EditEquipmentViewModel.MaintenanceDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Mettre à jour</button>
        <a asp-page="/Equipment/List" class="btn btn-secondary">Annuler</a>
    </form>
</div>
