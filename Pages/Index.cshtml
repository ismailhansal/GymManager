@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page - Gym Manager</title>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">

    @section Styles {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    }


</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <div id="carouselExampleIndicators" class="carousel slide fixed-top" data-bs-ride="carousel" data-bs-interval="6000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active" style="background-image: url(/img/login-cover.jpg);">
                    <div class="carousel-caption text-center">
                        <h1>Welcome to Gym Manager</h1>
                        <h3>A new way to manage your fitness club</h3>
                        <a class="btn btn-outline-light btn-lg carousel-button" href="Identity/Account/Login">Log In</a>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="carousel-item" style="background-image: url(/img/carousel-slide-3.jpg);">
                    <div class="carousel-caption text-center">
                        <h1>Manage Equipment</h1>
                        <h3>Take care of your equipment with the malfunction reporting system</h3>
                        <a class="btn btn-outline-light btn-lg carousel-button" href="Identity/Account/Login">Log In</a>
                    </div>
                </div>
                <!-- Slide 3 -->
                <div class="carousel-item" style="background-image: url(/img/carousel-slide-2.jpg);">
                    <div class="carousel-caption text-center">
                        <h1>Control supplements</h1>
                        <h3>Control the availability of supplements</h3>
                        <a class="btn btn-outline-dark btn-lg carousel-button" href="Identity/Account/Login">Log In</a>
                    </div>
                </div>
                <!-- Slide 4 -->
                <div class="carousel-item" style="background-image: url(/img/carousel-slide-4.jpg);">
                    <div class="carousel-caption text-center">
                        <h1>Employees Management</h1>
                        <h3>Edit or delete gym staff accounts</h3>
                        <a class="btn btn-outline-light btn-lg carousel-button" href="Identity/Account/Login">Log In</a>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>




    ;
</body>
</html>