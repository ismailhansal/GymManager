@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["HideNavbar"] = true; // Masquer la navbar pour cette page
}

@section Styles {
    <link href="~/lib/bootstrap/dist/css/bootstrap-pulse.css" rel="stylesheet" />
    <link href="~/css/LoginAndRegisterStyle.css" rel="stylesheet" />
}

<div class="container body-content" style="margin-top: 200px;">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 form-container rounded px-5 py-4">
            <h2 class="text-center"><i class="fas fa-dumbbell"></i> <span class="logo">Gym Manager</span></h2>
            <hr />
            <h2 class="mb-3 text-center">Log in</h2>

            <form id="loginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @* CSRF token (anti-forgery token) *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                </div>
                <div><span asp-validation-for="Input.Email" class="text-danger"></span></div>

                <div class="input-group mt-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                </div>
                <div><span asp-validation-for="Input.Password" class="text-danger"></span></div>

                <div class="form-group mt-2">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" for="Input.RememberMe">Remember me?</label>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button id="loginSubmit" type="submit" class="btn btn-primary btn-block btn-lg w-100">Log in</button>
                </div>
            </form>

            <div class="mt-3">
                <p><a asp-area="Identity" asp-page="/Account/Register">Register as a new employee</a></p>
            </div>
        </div>
    </div>
</div>
